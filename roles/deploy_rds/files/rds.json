{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Create a MariaDB instance on RDS",
    "Parameters": {
        "TagProject": {
            "Description": "Tag Project",
            "Type": "String"
        },
        "DBInstanceClass": {
            "Description": "RDS instance type",
            "Type": "String",
            "AllowedValues": [ "db.t2.micro", "db.t2.small", "db.t2.medium", "db.t2.large", "db.t2.xlarge", "db.t2.2xlarge" ],
            "ConstraintDescription": "Must be a valid DB EC2 instance type"
        },
        "DBName": {
            "Description": "Database name",
            "Type": "String",
            "MinLength": "1",
            "MaxLength": "64",
            "AllowedPattern": "[a-zA-Z][a-zA-Z0-9]*",
            "ConstraintDescription": "must begin with a letter and contain only alphanumeric characters."
        },
        "DBUser": {
            "Description": "Database admin username",
            "Type": "String",
            "NoEcho": "true",
            "MinLength": "1",
            "MaxLength": "16",
            "AllowedPattern": "[a-zA-Z][a-zA-Z0-9]*",
            "ConstraintDescription": "must begin with a letter and contain only alphanumeric characters."
        },
        "DBPassword": {
            "Description": "The database admin account password",
            "Type": "String",
            "NoEcho": "true",
            "MinLength": "8",
            "MaxLength": "41",
            "AllowedPattern": "[a-zA-Z0-9]*",
            "ConstraintDescription": "must contain only alphanumeric characters."
        },
        "VpcId": {
            "Description": "VPC associated with the provided subnets",
            "Type": "AWS::EC2::VPC::Id"
        },
        "SubnetIds": {
            "Description": "List of VPC subnet IDs for the scaling group",
            "Type": "List<AWS::EC2::Subnet::Id>"
        }
    },
    "Resources": {
        "DbInstance": {
            "Type": "AWS::RDS::DBInstance",
            "Properties": {
                "DBName": { "Ref": "DBName" },
                "DBSubnetGroupName": { "Ref": "SubnetGroup" },
                "AllocatedStorage": "20",
                "DBInstanceClass": { "Ref": "DBInstanceClass" },
                "DBInstanceIdentifier": { "Fn::Join": [ "", [ { "Ref": "TagProject" }, "-rds1" ] ] },
                "Engine": "MariaDB",
                "EngineVersion": "10.2.12",
                "MasterUsername": { "Ref": "DBUser" },
                "MasterUserPassword": { "Ref": "DBPassword" },
                "PubliclyAccessible": true,
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": { "Fn::Join": [ "", [ { "Ref": "TagProject" }, "-rds1" ] ] }
                    },
                    {
                        "Key": "Project",
                        "Value": { "Ref": "TagProject" }
                    }
                ],
                "VPCSecurityGroups": [ { "Ref": "RdsSecurityGroup" } ]
            }
        },
        "SubnetGroup" : {
            "Type" : "AWS::RDS::DBSubnetGroup",
            "Properties" : {
               "DBSubnetGroupDescription" : "Group for 3 subnets on 3 different AZ",
               "SubnetIds" : { "Ref": "SubnetIds" },
               "Tags": [
                {
                    "Key": "Name",
                    "Value": { "Fn::Join": [ "", [ { "Ref": "TagProject" }, "-subnet-group" ] ] }
                },
                {
                    "Key": "Project",
                    "Value": { "Ref": "TagProject" }
                }
            ]
            }
        },
        "RdsSecurityGroup": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "GroupDescription": "Open ports to instances",
                "VpcId": { "Ref": "VpcId" },
                "SecurityGroupIngress": [
                    {
                        "IpProtocol": "tcp",
                        "FromPort": 3306,
                        "ToPort": 3306,
                        "CidrIp": "0.0.0.0/0"
                    }
                ],
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": { "Fn::Join": [ "", [ { "Ref": "TagProject" }, "-rds1-sg" ] ] }
                    },
                    {
                        "Key": "Project",
                        "Value": { "Ref": "TagProject" }
                    }
                ]
            }
        }
    },
    "Outputs": {
        "DatabaseHostname": {
            "Description": "Database hostname",
            "Value": { "Fn::GetAtt": [ "DbInstance", "Endpoint.Address" ] }
        },
        "DatabasePort": {
            "Description": "Database Port",
            "Value": { "Fn::GetAtt": [ "DbInstance", "Endpoint.Port" ] }
        },
        "DatabaseName": {
            "Description": "Database Name",
            "Value": { "Ref": "DBName" }
        },
        "DatabaseSecurityGroup": {
            "Description": "Database security group",
            "Value": { "Ref": "RdsSecurityGroup" }
        }
    }
}